<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.washington.vicky37.quizdroid3.MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Math"
        android:textAllCaps="false"
        android:id="@+id/mathToQuestion"
        android:layout_weight="1"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/mathDesc"
        android:layout_weight="1"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Physics"
        android:textAllCaps="false"
        android:id="@+id/physicsToQuestion"
        android:layout_weight="1"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/physicsDesc"
        android:layout_weight="1"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="Marvel Hero"
        android:textAllCaps="false"
        android:id="@+id/marvelToQuestion"
        android:layout_weight="1"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/marvelDesc"
        android:layout_weight="1"/>


</LinearLayout>
